<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/image1"
    tools:context=".MainActivity">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/ayarlanabilir_text">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/Giriş1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefon Numarası Doğrulama"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/TelefonText"
                android:background="@drawable/ayarlanabilir_text"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:drawablePadding="8dp"
                android:hint="Telefon Numarası"
                android:inputType="number"
                android:maxLength="11"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/TelefonDoğrulamaText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ayarlanabilir_text"
                android:drawableLeft="@drawable/baseline_perm_phone_msg_24"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:hint="Doğrulama Kodu"
                android:maxLength="6"
                tools:layout_editor_absoluteX="Odp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:visibility="invisible" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/KodGonderButton"
                android:text="DEVAM"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "20dp"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:id="@+id/GirisButton"
        android:text="GİRİŞ"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/purple"
        app:cornerRadius = "20dp"
        android:visibility="invisible"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Açıklama Metnini Okudum Onayladım"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/AcıklamaMetiniText"
        android:textColor="@color/purple"
        android:checked="false"
        android:layout_marginBottom="1dp"/>
    
</LinearLayout>


